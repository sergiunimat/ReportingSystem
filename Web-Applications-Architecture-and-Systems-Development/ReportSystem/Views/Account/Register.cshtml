@model ReportSystem.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registration</h1>

<form asp-action="Register" asp-controller="Account" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email">Email address</label>
        <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Email" class="text-danger"></span>
        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input type="text" class="form-control" asp-for="City" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="City" class="text-danger"></span>
        <small class="form-text text-muted">Enter city you are living in</small>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
        <small class="form-text text-muted">Password constrains</small>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Password</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Password">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>