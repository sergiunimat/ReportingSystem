                    <div class="col-sm-12">
                        <input type="text" readonly class="form-control-plaintext" asp-for="UserCommentCount" value="@Model.UserCommentCount">
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group row">
                    <label asp-for="UserLikeCount" class="col-sm-12 col-form-label h5">Total Likes:</label>
                    <div class="col-sm-12">
                        <input type="text" readonly class="form-control-plaintext" asp-for="UserLikeCount" value="@Model.UserLikeCount">
                    </div>
                </div>
            </div>
        </div>


    </div>
}