        </div>

        <div class="row">
            <div class="col-6">
                <div class="form-group row">
                    <label asp-for="UserReportCount" class="col-sm-12 col-form-label h5">Total Reports</label>
                    <div class="col-sm-12">
                        <input type="text" readonly class="form-control-plaintext" asp-for="UserReportCount" value="@Model.UserReportCount">
                    </div>
                </div>
            </div>



            <div class="col-6">
                <div class="form-group row">
                    <label asp-for="UserInvestigationCount" class="col-sm-12 col-form-label h5">Total Investigations:</label>
                    <div class="col-sm-12">
                        <input type="text" readonly class="form-control-plaintext" asp-for="UserInvestigationCount" value="@Model.UserInvestigationCount">
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group row">
