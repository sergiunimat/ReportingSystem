@model ReportSystem.ViewModels.EditUserViewModel

    <form asp-action="EditUser" asp-controller="Admin">
        <div class="form-group">
            <label for="userName">Name</label>
            <input name="UserName" type="text" class="form-control" id="userName" value="@Model.UserName">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input name="UserEmail" type="email" class="form-control" id="exampleInputEmail1" value="@Model.UserEmail">
        </div>
        <div class="form-group">
            <div class="row w-100">
                <div class="col-4 d-inline">
                    <input disabled type="checkbox" asp-for="ReporterRole">
                    <label asp-for="ReporterRole">Reporter</label>
                </div>

                <div class="col-4 d-inline">
                    <input type="checkbox" asp-for="InvestigatorRole">
                    <label asp-for="InvestigatorRole">Investigator</label>
                </div>

                <div class="col-4 d-inline">
                    <input type="checkbox" asp-for="AdminRole">
                    <label asp-for="AdminRole">Admin</label>
                </div>

            </div>
        </div>
        <input name="UserId" type="text" value="@Model.UserId" hidden="">
        <button type="submit" class="btn btn-block shadow-animation-edit-user font-weight-bold">Submit</button>
    </form>