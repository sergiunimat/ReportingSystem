@model ReportSystem.ViewModels.CommentViewModel


<form method="post" asp-controller="Report" asp-action="AddComment">
    <div class="modal-body">
        <div class="form-group">
            <textarea asp-for="CommentText" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <input hidden asp-for="ReportId" value="@Model.ReportId">
    </div>
    <div class="form-group text-center">
        <button type="submit" class="btn shadow-animation  font-weight-bold border">Save changes</button>
    </div>
</form>